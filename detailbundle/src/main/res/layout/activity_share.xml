<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context="com.yunos.tvtaobao.detailbundle.evaluate.ShareActivity">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_61"
        android:focusable="false"
        android:src="@drawable/new_detail_share_top"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_39"
        android:focusable="false"
        android:layout_centerInParent="true"
        android:layout_below="@+id/iv_head"
        android:padding="@dimen/dp_7"
        android:src="@drawable/new_detail_share_top_text"/>

    <RelativeLayout
        android:id="@+id/iv_share_qr_code_bg"
        android:layout_width="@dimen/dp_384"
        android:layout_height="@dimen/dp_384"
        android:layout_marginTop="@dimen/dp_196"
        android:layout_marginLeft="@dimen/dp_448"
        android:padding="@dimen/dp_8"
        android:focusable="false"
        android:background="@drawable/new_detail_share_qr_code_bg">
        <ImageView
            android:id="@+id/iv_share_qr_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:focusable="false" />
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_login_1"
        android:layout_width="@dimen/dp_412"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/qr_code_login"
        android:layout_below="@+id/iv_share_qr_code_bg"
        android:layout_marginTop="@dimen/dp_18"
        android:focusable="true"
        android:layout_marginLeft="@dimen/dp_434"/>
    
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/qr_code_login_hint_bg"
        android:text="亲，赶紧登陆扫码赢积分"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center"
        android:focusable="false"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_568"
        android:layout_marginLeft="@dimen/dp_510"/>
</RelativeLayout>
