<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_169_3"
    android:focusable="true">

    <ImageView
        android:id="@+id/rl_bg_item"
        android:layout_width="@dimen/dp_489_3"
        android:layout_height="@dimen/dp_169_3"
        android:focusable="false"
        android:layout_centerInParent="true"></ImageView>

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/dp_468"
        android:layout_height="@dimen/dp_148"
        android:focusable="false"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_140"
            android:focusable="false"
            android:paddingLeft="@dimen/dp_18">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="@dimen/dp_320"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="¥5"
                android:focusable="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_70" />



            <TextView
                android:id="@+id/tv_require_money_use"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25_3"
                android:layout_below="@+id/tv_money"
                android:paddingRight="@dimen/dp_7"
                android:text="满50元可使用"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_18" />




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25_3"
                android:focusable="false"
                android:layout_toRightOf="@+id/tv_require_money_use"
                android:layout_below="@+id/tv_money"
                >

                <ImageView
                    android:id="@+id/tv_require_goods_use_all"
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_18"
                    android:textColor="#4474c4"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14"
                    android:focusable="false"

                    />

                <ImageView
                    android:id="@+id/tv_require_goods_use_part"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_18"
                    android:textColor="#4474c4"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_require_time_use"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25_3"
                android:layout_below="@+id/tv_require_money_use"
                android:text="有效期: 2017.08.22～2017.09.18"
                android:textColor="#ffffff"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textSize="@dimen/dp_18" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_toRightOf="@+id/rl_info"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:lineSpacingExtra="8sp"
            android:text="立即\n领取"
            android:textColor="#4474c4"
            android:focusable="false"
            android:textSize="@dimen/dp_32" />
    </RelativeLayout>


</RelativeLayout>
