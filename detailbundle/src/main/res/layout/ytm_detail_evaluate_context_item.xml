<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.detailbundle.view.DetailEvaluatecItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_27"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_27" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <TextView
                android:id="@+id/evaluate_context_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/ytsdk_detail_evaluate_context_font_color"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/evaluate_context_user_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/evaluate_context_user"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/evaluate_context_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/ytsdk_detail_evaluate_context_font_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/evaluate_context_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:includeFontPadding="false"
        android:textColor="@color/ytm_black"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/evaluate_context_sku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:textColor="@color/ytsdk_detail_evaluate_context_font_color"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/evaluate_context_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

</com.yunos.tvtaobao.detailbundle.view.DetailEvaluatecItemView>