<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <View
        android:id="@+id/background_layer"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_172"
        cl:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        tools:background="#ee000000"/>

    <ImageView
        android:id="@+id/iv_head_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintTop_toBottomOf="@+id/iv_head_icon"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_22"
        android:textColor="@android:color/white"
        tools:text="好胆你就来"
        />

    <TextView
        android:id="@+id/fans_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintTop_toBottomOf="@+id/name"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_16"
        android:textColor="@android:color/white"
        tools:text="粉丝 22.18万"
        />


    <TextView
        android:id="@+id/no_login_tip_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintBottom_toTopOf="@+id/no_login_tip_2"
        android:layout_marginBottom="@dimen/dp_3"
        android:includeFontPadding="false"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_20"
        android:textColor="@android:color/white"
        android:text="点击登录  看现场抢壕礼"
        />

    <TextView
        android:id="@+id/no_login_tip_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintBottom_toBottomOf="@+id/background_layer"
        android:layout_marginBottom="@dimen/dp_8"
        android:includeFontPadding="false"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_16"
        android:textColor="@android:color/white"
        android:text="登录并关注主播"
        android:alpha="0.5"
        />

    <TextView
        android:id="@+id/focus_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        cl:layout_constraintLeft_toLeftOf="@+id/background_layer"
        cl:layout_constraintRight_toRightOf="@+id/background_layer"
        cl:layout_constraintBottom_toBottomOf="@+id/background_layer"
        android:layout_marginBottom="@dimen/dp_12"
        android:includeFontPadding="false"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/dp_22"
        android:textColor="@android:color/white"
        android:text="粉丝 22.18万"
        />

</android.support.constraint.ConstraintLayout>