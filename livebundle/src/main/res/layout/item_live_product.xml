<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.live.view.FocusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_392"
    android:layout_height="@dimen/dp_116"
    android:background="@drawable/ytm_shop_first_focus"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_item_top"
    android:focusable="true"
    android:nextFocusLeft="@null"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24">

    <RelativeLayout
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_2">
        <ImageView
            android:id="@+id/iv_live_icon"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_12"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/item_live_product_num"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_32"
            android:paddingLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:background="@drawable/tbao_live_shop_num_unfocus"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_live_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="15"
                android:textColor="#99aabb"
                android:textSize="@dimen/sp_22" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tv_live_name"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/tv_live_price"
                android:layout_width="@dimen/dp_144"
                android:layout_height="@dimen/dp_40"
                android:lines="1"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/sp_22" />

            <ImageView
                android:visibility="gone"
                android:focusable="true"
                android:id="@+id/iv_live_cart"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitEnd"/>
        </RelativeLayout>

    </RelativeLayout>
</com.yunos.tvtaobao.live.view.FocusLinearLayout>