<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_384"
    android:layout_height="@dimen/dp_116"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:background="@drawable/ytm_live_first_focus"
    android:orientation="horizontal"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_tmall_live_icon"
        android:layout_width="@dimen/dp_176"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_8" />

    <ImageView
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_alignParentBottom="true"
        android:src="@drawable/live_player_icon"/>

    <ImageView
        android:id="@+id/state_of_play"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/iv_tmall_live_icon"/>

    <TextView
        android:id="@+id/iv_tmall_live_name"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_76"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/iv_tmall_live_icon"
        android:layout_below="@id/state_of_play"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#000000"
        android:textSize="@dimen/sp_22" />
</RelativeLayout>