<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tbao_live_qrcode_bg"
    android:id="@+id/rl_qr"
    android:visibility="gone"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_live_qr_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_24"/>

    <TextView
        android:id="@+id/tv_live_qr_nickname"
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_32"
        android:ellipsize="end"
        android:gravity="center_horizontal|bottom"
        android:lines="1"
        android:maxEms="12"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_32"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_live_qr_popularity"
            android:layout_width="@dimen/dp_128"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:maxEms="12"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#aabbcc" />

        <TextView
            android:id="@+id/tv_live_qr_fans"
            android:layout_width="@dimen/dp_128"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxEms="12"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_live_rq_image"
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_288"
        android:layout_marginTop="@dimen/dp_8" />
</LinearLayout>