<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.takeoutbundle.view.TOOrderDetailItemFocusLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_260"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.yunos.tvtaobao.takeoutbundle.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cv_radius = "@dimen/dp_12"
        app:backgroundColor = "#ffffff">

        <LinearLayout
            android:id="@+id/shop_item_info_layout"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_260">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/take_out_order_detail_product_logo"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/take_out_order_detail_product_sku"
                    android:layout_alignParentBottom="true"
                    android:layout_width="@dimen/dp_260"
                    android:textSize="@dimen/sp_20"
                    android:maxLines="1"
                    tools:text="微辣微辣"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:textColor="@color/ytm_white"
                    android:background="#80202020"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_260"
                android:background="@drawable/corner_shape_only_bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/take_out_order_detail_product_name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginTop="@dimen/dp_4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="@dimen/dp_46"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="@color/ytm_black"
                    tools:text="套餐套餐套餐"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/take_out_order_detail_product_count"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:textSize="@dimen/sp_24"
                    tools:text="2"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/take_out_order_detail_product_name"
                    android:layout_marginRight="@dimen/dp_12"
                    android:textColor="@color/ytm_black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    tools:text="x"
                    android:layout_alignBaseline="@id/take_out_order_detail_product_name"
                    android:textColor="@color/ytm_black"
                    android:textSize="@dimen/sp_20"
                    android:layout_toLeftOf="@id/take_out_order_detail_product_count"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/take_out_order_detail_product_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_below="@id/take_out_order_detail_product_name"
                    android:textColor="@color/to_highlight_color"
                    tools:text="￥999.99"
                    android:layout_height="@dimen/dp_40" />

                <TextView
                    android:id="@+id/take_out_order_detail_product_original_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_alignBaseline="@id/take_out_order_detail_product_price"
                    android:textColor="@color/ytm_gray"
                    tools:text="999.99"
                    android:layout_toRightOf="@id/take_out_order_detail_product_price"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </com.yunos.tvtaobao.takeoutbundle.widget.CardView>



</com.yunos.tvtaobao.takeoutbundle.view.TOOrderDetailItemFocusLayout>