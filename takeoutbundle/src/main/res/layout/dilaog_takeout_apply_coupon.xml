<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_take_out_apply_coupon">

    <LinearLayout
        android:layout_width="@dimen/dp_544"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_122"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fd4848"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.06"
                android:text="送你"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_40"
                tools:text="15.4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.06"
                android:text="元红包"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_24" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_34"
            android:paddingRight="@dimen/dp_34"
            android:paddingBottom="@dimen/dp_34"
            android:background="@drawable/bg_take_out_apply_coupon_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_link_button"
        android:layout_width="@dimen/dp_293"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_38" />
</FrameLayout>
