<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_d8081019"
    tools:context="com.yunos.tvtaobao.takeoutbundle.activity.TakeOutShopDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yunos.tv.app.widget.round.RoundCornerImageView
                android:id="@+id/iv_shop_logo"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_112"
                android:layout_marginLeft="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="fitStart"
                app:corner_radius="10.0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_26"
                    android:textColor="@color/color_e7f3ff"
                    android:textSize="@dimen/sp_40" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_starLevel"
                        android:layout_width="@dimen/dp_144"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tv_deliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_42"
                    android:text="公告与活动"
                    android:textColor="@color/color_e7f3ff"
                    android:textSize="@dimen/sp_32"
                    android:layout_marginLeft="@dimen/dp_4"
                    />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="本店主要经营"
                    android:textColor="@color/color_e7f3ff"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginRight="@dimen/dp_188"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:lineSpacingExtra="@dimen/dp_3"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_activity_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginLeft="@dimen/dp_5"
                    >

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_42"
                    android:text="商家信息"
                    android:textColor="@color/color_e7f3ff"
                    android:textSize="@dimen/sp_32"
                    android:layout_marginLeft="@dimen/dp_4"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_4"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电         话: "
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地         址: "
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间: "
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:id="@+id/tv_serving_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_4"
                    >

                    <TextView
                        android:id="@+id/tv_licens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业执照: "
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />

                    <TextView
                        android:id="@+id/tv_serviceLicense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_480"
                        android:text="卫生许可证: "
                        android:textColor="@color/color_e7f3ff"
                        android:textSize="@dimen/sp_24" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_4"
                    >

                    <com.yunos.tv.app.widget.round.RoundCornerImageView
                        android:id="@+id/iv_licens"
                        android:layout_width="@dimen/dp_400"
                        android:layout_height="@dimen/dp_400"
                        android:scaleType="fitStart"
                        app:corner_radius="10.0dp"
                        android:layout_marginTop="@dimen/dp_1"
                        />

                    <com.yunos.tv.app.widget.round.RoundCornerImageView
                        android:id="@+id/iv_serviceLicense"
                        android:layout_width="@dimen/dp_400"
                        android:layout_height="@dimen/dp_400"
                        android:layout_marginLeft="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_1"
                        android:scaleType="fitStart"
                        app:corner_radius="10.0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
