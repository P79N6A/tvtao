<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_476"
    android:layout_height="@dimen/dp_134"
    android:background="@drawable/bg_take_out_apply_coupon_item"
    android:paddingLeft="@dimen/dp_24">

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="#ff4b4b"
        android:textSize="@dimen/sp_50"
        tools:text="￥5" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_price"
        android:layout_marginTop="@dimen/dp_f8"
        android:textColor="#202020"
        android:textSize="@dimen/sp_18"
        tools:text="满88使用" />

    <TextView
        android:id="@+id/txt_scope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_price"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_f6"
        android:layout_toRightOf="@id/txt_name"
        android:background="@drawable/bg_take_out_apply_coupon_scope"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        tools:text="部分商品可使用" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_14"
        android:textColor="#8c94a3"
        android:textSize="@dimen/sp_15"
        tools:text="有效期：2018.03.27 ~ 2018.04.28" />

    <TextView
        android:id="@+id/txt_get_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:text="已领取"
        android:textColor="#ff4b4b"
        android:textSize="@dimen/sp_32" />
</RelativeLayout>


