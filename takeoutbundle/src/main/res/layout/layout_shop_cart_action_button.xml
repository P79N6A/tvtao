<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.biz.focus_impl.FocusArea xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_shop_cart_action"
    android:layout_width="@dimen/dp_292"
    android:layout_height="@dimen/dp_44"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shop_car_action_button"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#8396ae"
            android:textSize="@dimen/sp_24"
            tools:text="去选择" />

        <View
            android:id="@+id/view_devide_line"
            android:layout_width="@dimen/dp_1_3"
            android:layout_height="@dimen/dp_29"
            android:background="#80506176" />

        <TextView
            android:id="@+id/txt_tips"
            android:layout_width="@dimen/dp_192"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12"
            android:textColor="#8396ae"
            android:textSize="@dimen/sp_16"
            tools:text="缺少必选商品" />

    </LinearLayout>


</com.yunos.tvtaobao.biz.focus_impl.FocusArea>