<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_140">

    <ImageView
        android:id="@+id/shop_status_rest"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_4"
        android:src="@drawable/shop_status_reset"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shop_status_ordering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:background="@drawable/shop_status_ordering"
        android:lines="1"
        android:maxHeight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="接受预定， 预计4：30开始配送"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_27"
        android:ellipsize="end"
        android:lineSpacingExtra="12sp"
        android:lines="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_e7f3ff"
        android:textSize="@dimen/sp_40" />

    <com.powyin.slide.widget.BannerSwitch xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/good_discount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_10"
        app:pow_switch_switch_orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:ellipsize="end"
                android:paddingTop="@dimen/dp_2"
                android:singleLine="true"
                android:textColor="@color/white_e7f3ff"
                android:textSize="@dimen/sp_20" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:ellipsize="end"
                android:paddingTop="@dimen/dp_2"
                android:singleLine="true"
                android:textColor="@color/white_e7f3ff"
                android:textSize="@dimen/sp_20" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white_e7f3ff"
                android:textSize="@dimen/sp_20" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:ellipsize="end"
                android:paddingTop="@dimen/dp_2"
                android:singleLine="true"
                android:textColor="@color/white_e7f3ff"
                android:textSize="@dimen/sp_20" />
        </FrameLayout>

    </com.powyin.slide.widget.BannerSwitch>

</FrameLayout>

