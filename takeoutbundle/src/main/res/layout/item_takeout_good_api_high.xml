<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.biz.focus_impl.FocusArea xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/good_focus_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/good_bac_focus_select"
        android:elevation="@dimen/dp_7"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/good_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        app:cardBackgroundColor="@color/white_ffffffff"
        app:cardCornerRadius="@dimen/dp_12">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200">

                <ImageView
                    android:id="@+id/good_pic"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:scaleType="fitXY"
                    android:src="@drawable/good_icon_no_pic" />

                <FrameLayout
                    android:id="@+id/good_pic_toast"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_200"
                    android:background="#60000000"
                    android:gravity="center"
                    android:text="已售完"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="已售完"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_36" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="No.....Goods robbed"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12" />

                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_7">


                <TextView
                    android:id="@+id/good_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:lineSpacingExtra="0sp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="红豆奶茶红豆奶茶红豆奶茶红豆奶茶红豆奶茶"
                    android:textColor="#202020"
                    android:textSize="@dimen/sp_32" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_2" />

                <TextView
                    android:id="@+id/good_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="0sp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="食材：小蘑菇 小拇哥"

                    android:textColor="#606060"
                    android:textSize="@dimen/sp_20" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_2" />


                <TextView
                    android:id="@+id/good_sell_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="0sp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="月售200000"
                    android:textColor="#606060"
                    android:textSize="@dimen/sp_20" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_f2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sale_tip_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/good_sale_tip"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="5.5折限2份"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/sale_tip_0_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_f5"
                        android:background="@drawable/good_sale_tip_more"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_11"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="不与其它共享"
                        android:textColor="#ff6000"
                        android:textSize="@dimen/sp_16" />


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/sale_tip_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/good_sale_tip"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="5.5折限2份"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/sale_tip_1_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_f5"
                        android:background="@drawable/good_sale_tip_more"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_11"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="不与其它共享"
                        android:textColor="#ff6000"
                        android:textSize="@dimen/sp_16" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/sale_tip_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/good_sale_tip"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="5.5折限2份"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/sale_tip_2_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dp_f5"
                        android:background="@drawable/good_sale_tip_more"
                        android:lines="1"
                        android:paddingLeft="@dimen/dp_11"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="不与其它共享"
                        android:textColor="#ff6000"
                        android:textSize="@dimen/sp_16" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="10" />


                    <!--限购100件-->
                    <TextView
                        android:id="@+id/good_limit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/good_count"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/dp_2"
                        android:background="@drawable/good_item_num_info_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_92"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingRight="@dimen/dp_9"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="限购100件"
                        android:textColor="@color/color_202020"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/good_real_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="¥30"
                        android:textColor="#ff6000"
                        android:textSize="@dimen/sp_32" />

                    <Space
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/good_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_9"
                        android:text="¥50"
                        android:textColor="#9d9d9d"
                        android:textSize="@dimen/sp_20" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="10" />


                    <com.yunos.tvtaobao.biz.focus_impl.FocusArea
                        android:id="@+id/good_reduce_wrapper"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/good_reduce"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="true"
                            android:src="@drawable/good_item_level_reduce"
                            android:text="20"
                            android:textColor="@color/color_black_20"
                            android:textSize="@dimen/sp_25" />

                    </com.yunos.tvtaobao.biz.focus_impl.FocusArea>


                    <TextView
                        android:id="@+id/good_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/dp_1"
                        android:text="20"
                        android:textColor="#202020"
                        android:textSize="@dimen/sp_24" />

                    <com.yunos.tvtaobao.biz.focus_impl.FocusArea
                        android:id="@+id/good_add_wrapper"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/good_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:focusable="true"
                            android:src="@drawable/good_item_level_add" />

                    </com.yunos.tvtaobao.biz.focus_impl.FocusArea>


                    <Space
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_7" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/good_shop_mark"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_32"
        android:elevation="@dimen/dp_7"
        android:scaleType="fitXY"
        android:src="@drawable/shop_mark_status" />

</com.yunos.tvtaobao.biz.focus_impl.FocusArea>
