<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/loading_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunos.tvtaobao.splashscreen.LoadingActivity">

    <ProgressBar
        android:id="@+id/loading_progressbar"
        style ="android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/ytm_progress_bar_drawable"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_200"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loading_wait_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_380"
        android:text="@string/ytm_loading_uuid_wait"
        android:textColor="@color/ytm_white"
        android:textSize="@dimen/dp_40"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loading_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_200"
        android:text="@string/ytm_loading_uuid_fail"
        android:textColor="@color/ytm_white"
        android:textSize="@dimen/dp_40"
        android:visibility="gone" />

    <Button
        android:id="@+id/loading_fail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_300"
        android:background="@drawable/ytm_loading_fail_button"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_100"
        android:paddingRight="@dimen/dp_100"
        android:paddingTop="@dimen/dp_10"
        android:text="@string/ytbv_confirm"
        android:textColor="@color/ytm_white"
        android:textSize="@dimen/dp_36"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loading_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/dp_25"
        android:textSize="@dimen/sp_16"
        android:textColor="@android:color/white"/>
</FrameLayout>
