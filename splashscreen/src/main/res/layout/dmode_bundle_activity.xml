<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ytm_black"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/back_desk"
        android:layout_width="@dimen/dp_428"
        android:layout_height="@dimen/dp_552"
        android:layout_centerInParent="true"
        android:background="@drawable/yunos_tips"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tips_text"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/yunos_dmode_tips4"
            android:textColor="@color/ytm_black"
            android:textSize="@dimen/sp_18" />


        <TextView
            android:id="@+id/tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/yunos_dmode_tips5"
            android:textColor="@color/ytm_black"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

</RelativeLayout>