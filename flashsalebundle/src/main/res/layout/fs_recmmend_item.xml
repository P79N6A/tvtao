<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.flashsale.view.RecommendItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_220"
    android:layout_height="@dimen/dp_302"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fs_fl_stock_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@drawable/common_default"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_75"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_5">

        <TextView
            android:id="@+id/fs_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FF000000"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5">

            <TextView
                android:id="@+id/fs_tv_saleprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/fs_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_16"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#B2000000"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

    </LinearLayout>

</com.yunos.tvtaobao.flashsale.view.RecommendItemView>