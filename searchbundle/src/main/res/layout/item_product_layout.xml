<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_222"
    android:layout_height="@dimen/dp_410"
    android:layout_marginLeft="@dimen/dp_9"
    android:layout_marginTop="@dimen/dp_21"
    android:layout_marginRight="@dimen/dp_9"
    android:layout_marginBottom="@dimen/dp_21">

    <ImageView
        android:id="@+id/item_iv_goods_focus_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ytm_goods_item_focus_box"
        android:elevation="@dimen/dp_3"
        android:visibility="gone"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_3"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/item_iv_product_picture"
            android:layout_width="@dimen/dp_216"
            android:layout_height="@dimen/dp_216" />

        <TextView
            android:id="@+id/item_iv_sale"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_1_5"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_000000"
            android:background="@color/color_b2ffffff"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="@id/item_iv_product_picture"
            app:layout_constraintBottom_toBottomOf="@id/item_iv_product_picture"/>

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:lineSpacingExtra="0sp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:text="这里是商品名称这里是商品名称这里是商品名称这里是商品名称"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_20"
            app:layout_constraintTop_toBottomOf="@id/item_iv_product_picture"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="0sp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="￥218"
            android:textColor="@color/color_ff3333"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_tv_title" />

        <!--返利图标-->
        <ImageView
            android:id="@+id/item_rebate_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_iv_product_picture" />


        <TextView
            android:id="@+id/item_tv_yugufan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_100"
            android:text="预估￥1.99"
            android:textColor="@color/color_ff3333"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toRightOf="@id/item_rebate_tips"
            app:layout_constraintTop_toBottomOf="@id/item_iv_product_picture" />

        <LinearLayout
            android:id="@+id/item_ly_goods_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_126"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_iv_product_picture"
            android:orientation="horizontal">
            <!--标签列表名称：广告标，包邮，预售立减，买就返红包，满88包邮等-->
            <TextView
                android:id="@+id/iv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_2_7"
                android:paddingBottom="@dimen/dp_2_7"
                android:paddingLeft="@dimen/dp_4_7"
                android:paddingRight="@dimen/dp_4_7"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_ff3333"
                android:includeFontPadding="false"
                android:layout_marginRight="@dimen/dp_4"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/iv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_2_7"
                android:paddingBottom="@dimen/dp_2_7"
                android:paddingLeft="@dimen/dp_4_7"
                android:paddingRight="@dimen/dp_4_7"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_ff3333"
                android:includeFontPadding="false"
                android:layout_marginRight="@dimen/dp_4"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/iv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_2_7"
                android:paddingBottom="@dimen/dp_2_7"
                android:paddingLeft="@dimen/dp_4_7"
                android:paddingRight="@dimen/dp_4_7"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_ff3333"
                android:includeFontPadding="false"
                android:gravity="center_vertical"/>


        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:lineSpacingExtra="0sp"
            android:maxLines="1"
            android:text="耐克官方旗舰店"
            android:includeFontPadding="false"
            android:textColor="#4f707f"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>