<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.search.view.SearchResultItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_85_8"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_30"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="2.0"
        android:shadowRadius="1.0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_27"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_84"
        android:src="@drawable/ytm_search_result_line"/>
</com.yunos.tvtaobao.search.view.SearchResultItemLayout>