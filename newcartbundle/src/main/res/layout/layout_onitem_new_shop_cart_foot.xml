<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.biz.widget.NoFocusRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60"
        android:id="@+id/layout_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_210"
        android:layout_marginBottom="@dimen/dp_26"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_3"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@+id/layout_like"
            android:background="@color/ytsdk_detail_not_buysupport_price_color" />

        <LinearLayout
            android:id="@+id/layout_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_27"
                android:src="@drawable/like"
                android:layout_toLeftOf="@+id/txt"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_20"/>
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="你可能还喜欢"
                android:textColor="@color/ytm_white"
                android:textSize="@dimen/dp_32" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/layout_like"
            android:background="@color/ytsdk_detail_not_buysupport_price_color" />
    </RelativeLayout>
</com.yunos.tvtaobao.biz.widget.NoFocusRelativeLayout>