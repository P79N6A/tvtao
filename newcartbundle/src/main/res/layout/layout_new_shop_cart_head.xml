<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.biz.widget.InnerFocusLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_96"
    android:focusable="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_60">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/shop_cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="0sp"
            android:text="购物车（22）"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_36" />

        <com.yunos.tvtaobao.newcart.view.NoScaleFocusImageView
            android:id="@+id/shop_cart_icon"
            android:layout_width="@dimen/dp_660"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toRightOf="@+id/shop_cart_title"
            android:focusable="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</com.yunos.tvtaobao.biz.widget.InnerFocusLayout>