<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.cartbag.view.ShopCartHintFocusLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
		android:layout_width="@dimen/ytm_shop_cart_item_hint_width"
		android:layout_height="@dimen/ytm_shop_cart_item_hint_height"
	    android:paddingLeft="@dimen/ytm_shop_cart_item_hint_padding_left"
	    android:paddingRight="@dimen/ytm_shop_cart_item_hint_padding_right"
	    android:paddingTop="@dimen/ytm_shop_cart_item_hint_padding_top"
		android:orientation="vertical">

		<TextView
			android:id="@+id/hint_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/ytm_button_common_normal"
			android:drawableTop="@drawable/ytm_shop_cart_hint_icon"
			android:gravity="center_horizontal"
			android:paddingTop="@dimen/ytm_shop_cart_item_infor_selected_icon_padding"
			android:shadowDy="1"
			android:shadowRadius="1"
			android:textColor="@color/ytm_white"
			android:textSize="@dimen/ytm_shop_cart_item_hint_textSize" />
	</LinearLayout>
</com.yunos.tvtaobao.cartbag.view.ShopCartHintFocusLayout>
