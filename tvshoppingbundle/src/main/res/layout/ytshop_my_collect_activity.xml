<com.yunos.tv.app.widget.focus.FocusPositionManager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_collect_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#b4000000" >

        <com.yunos.tvtaobao.biz.widget.FocusNoDeepRelativeLayout
            android:id="@+id/my_collect_focus_layout"
            android:layout_width="@dimen/dp_480"
            android:layout_height="@dimen/dp_362"
            android:layout_centerInParent="true"
            android:background="@drawable/ytshop_my_collect_whitepanel"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_collect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:focusable="false"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_36" />

            <LinearLayout
                android:id="@+id/my_collect_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_89"
                android:layout_below="@id/my_collect_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ytshop_my_collect_button"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/ytshop_open_my_collect"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_24" />
        </com.yunos.tvtaobao.biz.widget.FocusNoDeepRelativeLayout>
    </RelativeLayout>

</com.yunos.tv.app.widget.focus.FocusPositionManager>