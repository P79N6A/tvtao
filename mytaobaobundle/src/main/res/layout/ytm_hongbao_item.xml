<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.biz.widget.FocusNoDeepLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    android:paddingTop="@dimen/dp_12" >

    <LinearLayout
        android:layout_width="@dimen/dp_219"
        android:layout_height="@dimen/dp_273"
        android:background="@drawable/ytm_hongbao_card_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hongbao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:focusable="false"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/hongboo_price_coustom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center_horizontal|bottom"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            android:lines="1"
            android:text="@string/ytm_hongbao_expire_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/hongbao_expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/hongbao_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:focusable="false"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#80ffffff"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

</com.yunos.tvtaobao.biz.widget.FocusNoDeepLinearLayout>