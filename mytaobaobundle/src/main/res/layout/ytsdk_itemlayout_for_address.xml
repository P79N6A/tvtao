<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.mytaobao.view.ItemLayoutForAddress xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="@dimen/dp_354"
    android:layout_height="@dimen/dp_237">

    <RelativeLayout
        android:id="@+id/view_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_28" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_130"
            android:singleLine="true"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxWidth="@dimen/dp_150"
            android:ellipsize="end" 
            android:singleLine="true"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_one"
        android:paddingLeft="@dimen/dp_28"
        android:paddingRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_28"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_2"
        android:lines="3"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp_27"
        android:paddingLeft="@dimen/dp_28"
        android:paddingRight="@dimen/dp_28"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/ytsdk_black44"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/set_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_below="@id/view_one"
        android:layout_marginTop="@dimen/dp_122"
        android:layout_marginRight="@dimen/dp_0"
        android:layout_marginLeft="@dimen/dp_0"
        android:background="@color/ytm_common_orange_ui30"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/ytsdk_set_default_address"
        android:textColor="@color/ytm_white"
        android:textSize="@dimen/sp_27"
        android:visibility="invisible" />

</com.yunos.tvtaobao.mytaobao.view.ItemLayoutForAddress>