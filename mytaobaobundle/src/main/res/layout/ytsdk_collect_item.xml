<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.mytaobao.view.ItemLayoutForCollect xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 宝贝图片及描述区域 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/collect_item_img"
            android:layout_width="@dimen/dp_226"
            android:layout_height="@dimen/dp_226"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />
        <!-- 描述（标题） -->

        <TextView
            android:id="@+id/collect_item_summary"
            android:layout_width="@dimen/dp_226"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/ytsdk_collects_item_title_bg"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/dp_5"
            android:maxLines="1"
            android:minHeight="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:textColor="@color/ytm_black"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ytm_white"
        android:orientation="vertical" >

        <!-- 价格 -->

        <TextView
            android:id="@+id/collect_item_price"
            android:layout_width="@dimen/dp_226"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/ytsdk_collects_item_price_txt"
            android:textSize="@dimen/sp_27" />

        <!-- 人气（已收藏数量） -->

        <TextView
            android:id="@+id/collect_item_collector_count"
            android:layout_width="@dimen/dp_226"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/ytsdk_collects_item_org_price_txt"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

</com.yunos.tvtaobao.mytaobao.view.ItemLayoutForCollect>