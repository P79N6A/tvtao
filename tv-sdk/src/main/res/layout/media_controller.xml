<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_top_height"
            android:background="@drawable/dvb_bg_topshadow"
            android:layout_gravity="top">
            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/media_title_width"
                android:layout_marginLeft="@dimen/media_title_marginLeft"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_title_textSize" />
            <ImageView
                android:id="@+id/video_definition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/media_definition_marginLeft"
                android:layout_marginTop="@dimen/media_definition_marginTop"
                android:layout_toRightOf="@id/video_title"
                android:visibility="invisible" />
            <com.yunos.tv.view.top.HomeshellDigitalClock
                android:id="@+id/digitalClock"
                android:layout_width="@dimen/media_clock_width"
                android:layout_height="@dimen/media_clock_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/media_clock_paddingLeft"
                android:paddingTop="@dimen/media_clock_paddingTop"
                android:layout_marginTop="@dimen/media_clock_marginTop"
                android:layout_marginRight="@dimen/media_clock_marginRight"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_clock_textSize" />
            <ImageView
                android:id="@+id/dolby_image"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/media_dolby_width"
                android:layout_height="@dimen/media_dolby_height"
                android:src="@drawable/audio_dolby"
                android:layout_marginRight="@dimen/media_dolby_marginRight"
                android:layout_marginTop="@dimen/media_dolby_marginTop"
                android:layout_toLeftOf="@id/digitalClock"
                android:visibility="invisible" />
            <com.yunos.tv.view.top.HomeshellNetWork
                android:id="@+id/wifi_image"
                android:layout_width="@dimen/media_wifi_height"
                android:layout_height="@dimen/media_wifi_width"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/media_wifi_marginRight"
                android:layout_marginTop="@dimen/media_wifi_marginTop"
                android:layout_toLeftOf="@id/dolby_image"
                android:focusable="false" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_control_wrap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_control_height"
            android:layout_gravity="bottom"
            android:background="@drawable/dvb_bg_downshadow"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:includeFontPadding="false"
                android:gravity="right"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_time_textSize"
                android:layout_marginLeft="@dimen/media_time_current_marginLeft"
                android:text="0:00:00">
            </TextView>
            <TextView
                android:id="@+id/tv_time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:includeFontPadding="false"
                android:textColor="@color/text_color_white"
                android:layout_marginRight="@dimen/media_time_total_marginRight"
                android:textSize="@dimen/media_time_textSize"
                android:text="0:00:00" />
            <com.yunos.tv.app.widget.SeekBar
                android:id="@+id/main_seekbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_seekbar_height"
                android:layout_toRightOf="@id/tv_time_current"
                android:layout_toLeftOf="@id/tv_time_total"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/media_seekbar_marginLeft"
                android:layout_marginRight="@dimen/media_seekbar_marginRight"
                android:layout_marginBottom="@dimen/media_seekbar_marginBottom"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            <TextView
                android:id="@+id/tv_time_seek"
                android:visibility="invisible"
                android:layout_width="@dimen/media_time_seek_width"
                android:layout_height="@dimen/media_time_seek_height"
                android:includeFontPadding="false"
                android:background="@drawable/dvb_bg_timenow"
                android:layout_above="@id/main_seekbar"
                android:layout_alignLeft="@id/main_seekbar"
                android:textSize="@dimen/media_time_textSize"
                android:gravity="center"
                android:paddingBottom="@dimen/media_time_seek_paddingBottom"
                android:layout_marginBottom="@dimen/media_time_seek_marginBottom"
                android:textColor="@color/text_color_white"
                android:text="0:00:00" />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layout_mirror"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_top_mirror"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_top_height"
            android:background="@drawable/dvb_bg_topshadow"
            android:layout_gravity="top">
            <TextView
                android:id="@+id/video_title_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/media_title_width"
                android:layout_marginLeft="@dimen/media_title_marginLeft"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_title_textSize" />
            <ImageView
                android:id="@+id/video_definition_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/media_definition_marginLeft"
                android:layout_marginTop="@dimen/media_definition_marginTop"
                android:layout_toRightOf="@id/video_title_mirror"
                android:visibility="invisible" />
            <com.yunos.tv.view.top.HomeshellDigitalClock
                android:id="@+id/digitalClock_mirror"
                android:layout_width="@dimen/media_clock_width"
                android:layout_height="@dimen/media_clock_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/media_clock_paddingLeft"
                android:paddingTop="@dimen/media_clock_paddingTop"
                android:layout_marginTop="@dimen/media_clock_marginTop"
                android:layout_marginRight="@dimen/media_clock_marginRight"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_clock_textSize" />
            <ImageView
                android:id="@+id/dolby_image_mirror"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/media_dolby_width"
                android:layout_height="@dimen/media_dolby_height"
                android:src="@drawable/audio_dolby"
                android:layout_marginRight="@dimen/media_dolby_marginRight"
                android:layout_marginTop="@dimen/media_dolby_marginTop"
                android:layout_toLeftOf="@id/digitalClock_mirror"
                android:visibility="invisible" />
            <com.yunos.tv.view.top.HomeshellNetWork
                android:id="@+id/wifi_image_mirror"
                android:layout_width="@dimen/media_wifi_height"
                android:layout_height="@dimen/media_wifi_width"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/media_wifi_marginRight"
                android:layout_marginTop="@dimen/media_wifi_marginTop"
                android:layout_toLeftOf="@id/dolby_image_mirror"
                android:focusable="false" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_control_wrap_mirror"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_control_height"
            android:layout_gravity="bottom"
            android:background="@drawable/dvb_bg_downshadow"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time_current_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:includeFontPadding="false"
                android:gravity="right"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_time_textSize"
                android:layout_marginLeft="@dimen/media_time_current_marginLeft"
                android:text="0:00:00">
            </TextView>
            <TextView
                android:id="@+id/tv_time_total_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:includeFontPadding="false"
                android:textColor="@color/text_color_white"
                android:layout_marginRight="@dimen/media_time_total_marginRight"
                android:textSize="@dimen/media_time_textSize"
                android:text="0:00:00" />
            <com.yunos.tv.app.widget.SeekBar
                android:id="@+id/main_seekbar_mirror"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_seekbar_height"
                android:layout_toRightOf="@id/tv_time_current_mirror"
                android:layout_toLeftOf="@id/tv_time_total_mirror"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/media_seekbar_marginLeft"
                android:layout_marginRight="@dimen/media_seekbar_marginRight"
                android:layout_marginBottom="@dimen/media_seekbar_marginBottom"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            <TextView
                android:id="@+id/tv_time_seek_mirror"
                android:visibility="invisible"
                android:layout_width="@dimen/media_time_seek_width"
                android:layout_height="@dimen/media_time_seek_height"
                android:includeFontPadding="false"
                android:background="@drawable/dvb_bg_timenow"
                android:layout_above="@id/main_seekbar_mirror"
                android:layout_alignLeft="@id/main_seekbar_mirror"
                android:textSize="@dimen/media_time_textSize"
                android:gravity="center"
                android:paddingBottom="@dimen/media_time_seek_paddingBottom"
                android:layout_marginBottom="@dimen/media_time_seek_marginBottom"
                android:textColor="@color/text_color_white"
                android:text="0:00:00" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>