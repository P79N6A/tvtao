<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/media_center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/view_loading"
            android:layout_width="@dimen/media_loading_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">
            <com.yunos.tv.app.widget.ProgressBar
                android:id="@+id/loading_process_dialog_progressBar"
                android:layout_width="@dimen/media_loading_progress_width"
                android:layout_height="@dimen/media_loading_progress_height"
                android:layout_gravity="center_horizontal"
                sdk:alpha="100"
              />
            <TextView
                android:id="@+id/txt_percent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_loading_textSize"
                android:shadowColor="@color/meida_loading_shadow_color"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="3"
                 />
            <TextView
                android:id="@+id/txt_networkspeed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:shadowColor="@color/meida_loading_shadow_color"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="3"
                android:textSize="@dimen/media_loading_speed_textSize" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_error"
            android:layout_width="@dimen/media_error_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/media_error_img_small"
                android:layout_width="@dimen/home_video_error_small_width"
                android:layout_height="@dimen/home_video_error_small_height"
                android:layout_marginBottom="@dimen/home_video_error_small_marginBottom"
                android:layout_gravity="center_horizontal|top"
                android:focusable="false"
                android:gravity="center"
                android:src="@drawable/video_error_small" />
            <ImageView
                android:id="@+id/media_error_img_big"
                android:layout_width="@dimen/home_video_error_big_width"
                android:layout_height="@dimen/home_video_error_big_height"
                android:layout_marginBottom="@dimen/home_video_error_big_marginBottom"
                android:layout_gravity="center"
                android:focusable="false"
                android:gravity="center"
                android:visibility="gone"
                android:src="@drawable/video_error_big" />
            <TextView
                android:id="@+id/txt_error_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_error_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|top"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_loading_speed_textSize" />
        </LinearLayout>
        <ImageView
            android:id="@+id/view_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_play"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/view_pause_small"
            android:layout_width="@dimen/media_pause_small_width"
            android:layout_height="@dimen/media_pause_small_height"
            android:layout_gravity="center"
            android:src="@drawable/icon_play_small"
            android:visibility="invisible" />
        <FrameLayout
            android:id="@+id/view_adremain_large"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_top_height"
            android:layout_gravity="top"
            android:background="@drawable/dvb_bg_topshadow"
            android:visibility="invisible">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/media_title_width"
                android:layout_marginLeft="@dimen/media_title_marginLeft"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="left|top"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_title_textSize" />
            <TextView
                android:id="@+id/txt_adremain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_adremain_height"
                android:gravity="right"
                android:layout_gravity="right|top"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_adremain_textSize"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:layout_marginRight="@dimen/media_adremain_marginRight" />
        </FrameLayout>
        <TextView
            android:id="@+id/txt_adremain_small"
            android:layout_width="@dimen/media_adremain_width_small"
            android:layout_height="@dimen/media_adremain_height_small"
            android:background="@drawable/adremain_small_bg"
            android:layout_gravity="right|top"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/media_adremain_textSize_small"
            android:layout_marginTop="@dimen/media_adremain_marginTop_small"
            android:layout_marginRight="@dimen/media_adremain_marginRight_small"
            android:visibility="invisible" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/media_center_mirror"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/view_loading_mirror"
            android:layout_width="@dimen/media_loading_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">
            <com.yunos.tv.app.widget.LiquidProgressBar
                android:id="@+id/loading_process_dialog_progressBar_mirror"
                android:layout_width="@dimen/media_loading_progress_width"
                android:layout_height="@dimen/media_loading_progress_height"
                android:layout_gravity="center_horizontal"
                 />
            <TextView
                android:id="@+id/txt_percent_mirror"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_loading_textSize"
                android:shadowColor="@color/meida_loading_shadow_color"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="3"
			 />
            <TextView
                android:id="@+id/txt_networkspeed_mirror"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:shadowColor="@color/meida_loading_shadow_color"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="3"
                android:textSize="@dimen/media_loading_speed_textSize" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_error_mirror"
            android:layout_width="@dimen/media_error_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/media_error_img_small_mirror"
                android:layout_width="@dimen/home_video_error_small_width"
                android:layout_height="@dimen/home_video_error_small_height"
                android:layout_marginBottom="@dimen/home_video_error_small_marginBottom"
                android:layout_gravity="center_horizontal|top"
                android:focusable="false"
                android:gravity="center"
                android:src="@drawable/video_error_small" />
            <ImageView
                android:id="@+id/media_error_img_big_mirror"
                android:layout_width="@dimen/home_video_error_big_width"
                android:layout_height="@dimen/home_video_error_big_height"
                android:layout_marginBottom="@dimen/home_video_error_big_marginBottom"
                android:layout_gravity="center"
                android:focusable="false"
                android:gravity="center"
                android:visibility="gone"
                android:src="@drawable/video_error_big" />
            <TextView
                android:id="@+id/txt_error_msg_mirror"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_loading_error_textHeight"
                android:layout_gravity="center_horizontal"
                android:gravity="top|center_horizontal"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_loading_speed_textSize" />
        </LinearLayout>
        <ImageView
            android:id="@+id/view_pause_mirror"
            android:layout_width="@dimen/media_pause_width"
            android:layout_height="@dimen/media_pause_height"
            android:layout_gravity="center"
            android:src="@drawable/icon_play"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/view_pause_small_mirror"
            android:layout_width="@dimen/media_pause_small_width"
            android:layout_height="@dimen/media_pause_small_height"
            android:layout_gravity="center"
            android:src="@drawable/icon_play_small"
            android:visibility="invisible" />
        <FrameLayout
            android:id="@+id/view_adremain_large_mirror"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_top_height"
            android:layout_gravity="top"
            android:background="@drawable/dvb_bg_topshadow"
            android:visibility="invisible">
            <TextView
                android:id="@+id/txt_title_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/media_title_width"
                android:layout_marginLeft="@dimen/media_title_marginLeft"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="left|top"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_title_textSize" />
            <TextView
                android:id="@+id/txt_adremain_mirror"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_adremain_height"
                android:gravity="right"
                android:layout_gravity="right|top"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/media_adremain_textSize"
                android:layout_marginTop="@dimen/media_title_marginTop"
                android:layout_marginRight="@dimen/media_adremain_marginRight" />
        </FrameLayout>
        <TextView
            android:id="@+id/txt_adremain_small_mirror"
            android:layout_width="@dimen/media_adremain_width_small"
            android:layout_height="@dimen/media_adremain_height_small"
            android:background="@drawable/adremain_small_bg"
            android:layout_gravity="right|top"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/media_adremain_textSize_small"
            android:layout_marginTop="@dimen/media_adremain_marginTop_small"
            android:layout_marginRight="@dimen/media_adremain_marginRight_small"
            android:visibility="invisible" />
    </FrameLayout>
</LinearLayout>