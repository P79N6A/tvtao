<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_184"
    android:layout_height="@dimen/dp_375"
    android:layout_marginTop="@dimen/dp_28"
    android:background="@drawable/bg_item_round_corners">

    <com.tvtaobao.voicesdk.view.RoundImageView
        android:id="@+id/item_product_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_184"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/item_product_tag_num"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:scaleType="fitXY"
        android:src="@drawable/item_tag_num_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:orientation="vertical"
        android:layout_below="@id/item_product_pic"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8">

        <TextView
            android:id="@+id/item_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_6"
            android:lineSpacingExtra="0dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="2"
            android:text="春潮新款韩版休鲁花花生油..."
            android:textColor="#222222"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_f4"
            android:singleLine="true"
            android:text="￥180.99"
            android:textColor="#ff3300"
            android:textSize="@dimen/sp_24" />

        <LinearLayout
            android:id="@+id/item_product_rebate_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_rebate_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:maxHeight="@dimen/dp_16"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/item_product_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_f2"
                android:singleLine="true"
                android:textColor="#ff3300"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_product_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:singleLine="true"
            android:text="22180人付款"
            android:textColor="#808080"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_6">

            <TextView
                android:id="@+id/item_product_tag_postage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#808080"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/item_tag_exempt_postage"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/tag_postage"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_6">

            <ImageView
                android:id="@+id/item_product_tag_quick"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:src="@drawable/tag_quick" />

            <ImageView
                android:id="@+id/item_tag_already_buy"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/tag_dialog_already_buy" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>