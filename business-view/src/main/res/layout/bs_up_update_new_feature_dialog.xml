<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2000000">

    <RelativeLayout
        android:layout_width="@dimen/dp_544"
        android:layout_height="@dimen/dp_400"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_368"
        android:background="@drawable/bs_up_update_new_feature_bg">

        <LinearLayout
            android:layout_width="@dimen/dp_357"
            android:layout_height="@dimen/dp_96"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_176"
            android:layout_marginLeft="@dimen/dp_64">

            <LinearLayout
                android:id="@+id/bs_up_new_feature_content1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <View
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_margin="@dimen/dp_13"
                    android:background="@drawable/dot_24357e"/>

                <TextView
                    android:id="@+id/bs_up_fature_text1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/bs_up_update_black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bs_up_new_feature_content2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <View
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_margin="@dimen/dp_13"
                    android:background="@drawable/dot_24357e"/>

                <TextView
                    android:id="@+id/bs_up_fature_text2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/bs_up_update_black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bs_up_new_feature_content3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <View
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_6"
                    android:layout_margin="@dimen/dp_13"
                    android:background="@drawable/dot_24357e"/>

                <TextView
                    android:id="@+id/bs_up_fature_text3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/bs_up_update_black"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>