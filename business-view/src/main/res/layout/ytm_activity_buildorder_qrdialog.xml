<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qrcode_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/dp_480"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/ytm_taobao_qrdialog_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center_horizontal"
            android:text="亲，已为您下订单啦"
            android:textAlignment="center"
            android:textColor="@color/ytbv_black"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:id="@+id/qrcode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="订单总计xxxx元"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_36" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:gravity="center_horizontal"
            android:text="打开【手机淘宝】扫码付款"
            android:textColor="#000000"
            android:textSize="@dimen/sp_26" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_weight="1"
            android:background="#00000000">

            <ImageView
                android:id="@+id/qrcode_image"
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_400" />

            <ImageView
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_centerInParent="true"
                android:src="@drawable/ytbv_icon_qr_tao" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="活动期间返现红包可能会略有延时哦~"
            android:textColor="@color/ytm_buildorder_sku"
            android:textSize="@dimen/sp_20"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>