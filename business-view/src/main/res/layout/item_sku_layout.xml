<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="708dp"
    android:layout_height="match_parent"
    android:id="@+id/item_sku_layout">

    <com.yunos.tvtaobao.biz.widget.newsku.widget.SkuItem
        android:id="@+id/sku_item_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:focusable="false"/>

    <com.yunos.tvtaobao.biz.widget.newsku.widget.SkuItem
        android:id="@+id/sku_item_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/dp_f2"
        android:focusable="false"/>

    <com.yunos.tvtaobao.biz.widget.newsku.widget.SkuItem
        android:id="@+id/sku_item_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/dp_f2"
        android:focusable="false"/>
</LinearLayout>