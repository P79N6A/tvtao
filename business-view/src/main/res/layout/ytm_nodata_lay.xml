<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nodata_lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:focusable="false"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="@dimen/dp_173_33"
        android:layout_height="@dimen/dp_58"
        android:contentDescription="@string/ytm_contentDescription"
        android:focusable="false"
        android:src="@drawable/ytm_nodata_cat" />

    <TextView
        android:id="@+id/nodata_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_23_33"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/ytm_nodata_text"
        android:textColor="@color/ytm_tui_text_color_grey"
        android:textSize="@dimen/sp_26" />

</LinearLayout>