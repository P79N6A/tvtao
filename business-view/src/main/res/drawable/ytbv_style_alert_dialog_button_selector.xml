<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected -->
    <item android:state_selected="true"  android:drawable="@color/ytbv_button_focus" />
    
    <!-- Pressed -->
    <item android:state_pressed="true"  android:drawable="@color/ytbv_button_focus" />
    
