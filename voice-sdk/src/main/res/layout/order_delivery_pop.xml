<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0202020">

    <LinearLayout
        android:id="@+id/lllayout"
        android:layout_width="@dimen/dp_720"
        android:layout_height="@dimen/dp_440"
        android:layout_centerInParent="true"
        android:background="@drawable/corner_shape_full_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_delivery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="查看物流"
                android:textColor="@color/ytm_black"
                android:textSize="36sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#A2AABA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_340">

            <ImageView
                android:id="@+id/order_delivery_guy"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_340"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/order_delivery_guy" />

            <LinearLayout
                android:id="@+id/order_delivery_right_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_340"
                android:layout_toRightOf="@id/order_delivery_guy"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_68"
                    android:text="商家配送"
                    android:textColor="@color/ytm_black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无物流信息，请耐心等待"
                    android:textColor="@color/ytm_black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="您可以拨打商家电话"
                    android:textColor="@color/ytm_black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/order_delivery_right_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ytm_black"
                    android:textSize="24sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_delivery_guy"
                android:text="暂无物流信息，请耐心等待"
                android:textColor="@color/ytm_black"
                android:textSize="24sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/order_delivery_right_details"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_340"
                android:layout_toRightOf="@id/order_delivery_guy"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="骑手信息"
                    android:textColor="@color/ytm_gray"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/take_out_delivery_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/ytm_black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/take_out_delivery_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="12sp"
                    android:text="15849385874"
                    android:textColor="@color/ytm_black"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="骑手距您还有"
                    android:textColor="@color/ytm_black"
                    android:textSize="@dimen/sp_24" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/take_out_delivery_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_f17"
                        android:text="5662"
                        android:textColor="#ff6000"
                        android:textSize="@dimen/sp_76" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/take_out_delivery_distance"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/take_out_delivery_distance"
                        android:text="米"
                        android:textColor="@color/ytm_black"
                        android:textSize="@dimen/sp_24" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>