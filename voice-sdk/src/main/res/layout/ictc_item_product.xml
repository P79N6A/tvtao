<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="@dimen/dp_136"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_136"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_search"
        android:orientation="horizontal">

        <com.tvtaobao.voicesdk.view.RoundImageView
            android:id="@+id/item_product_image"
            android:layout_width="@dimen/dp_136"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="0sp"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_18"
                tools:text="麦伦西瓜汁果味1000克冲进口夏季特别饮品啊"/>

            <TextView
                android:id="@+id/item_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_41"
                android:textColor="#ff4900"
                tools:text="￥99999.99"
                android:textSize="@dimen/sp_28" />

            <LinearLayout
                android:id="@+id/layout_rebate_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_69"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_rebate_tag"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:visibility="visible"
                    android:adjustViewBounds="true"
                    android:maxHeight="@dimen/dp_16"/>

                <TextView
                    android:layout_marginTop="@dimen/dp_1"
                    android:id="@+id/item_product_rebate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="0sp"
                    android:textColor="#ff4900"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textSize="@dimen/sp_14"
                    tools:text="预估￥9.99" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/item_product_free_postage"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/tag_postage"
                        android:layout_centerVertical="true"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/item_product_postage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_16"
                        tools:text="1111"
                        android:visibility="gone" />

                </RelativeLayout>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/item_product_tag_quick"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/tag_quick"
                    android:visibility="visible" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:id="@+id/item_product_tag_already_buy"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/tag_dialog_already_buy"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_product_tag_num"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28" />
</RelativeLayout>