<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.tradelink.buildorder.view.BuildOrderRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buildorder_address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/ytm_black"
            android:textSize="@dimen/sp_22"/>

        <TextView
            android:id="@+id/buildorder_address_detailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_9"
            android:paddingTop="@dimen/dp_9"
            android:singleLine="true"
            android:textColor="@color/ytm_black"
            android:textSize="@dimen/sp_22"/>

        <TextView
            android:id="@+id/buildorder_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/ytm_buildorder_address"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

</com.yunos.tvtaobao.tradelink.buildorder.view.BuildOrderRelativeLayout>