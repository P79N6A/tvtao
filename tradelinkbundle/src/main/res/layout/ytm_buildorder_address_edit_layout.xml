<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.tradelink.buildorder.view.AddressEditRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false" >

    <RelativeLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:focusable="false" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:text="@string/ytm_buildorder_address_edit_ok"
            android:textColor="@color/ytm_buildorder_address_ok"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/buildorder_edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_0"
            android:background="@drawable/ytm_buildorder_address_edit_icon"
            android:contentDescription="@null"
            android:focusable="false"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/buildorder_edit_icon"
            android:singleLine="true"
            android:text="@string/ytm_buildorder_address_edit_addr"
            android:textColor="@color/ytm_buildorder_address_addr"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

</com.yunos.tvtaobao.tradelink.buildorder.view.AddressEditRelativeLayout>