<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_info_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品优惠 定金抵用:省30.00元"
        android:textColor="@color/ytm_858585"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_34"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_info_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付尾款时间: 09.01 00:00~09.18 00:00"
        android:textColor="@color/ytm_858585"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_34"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_info_deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发货时间: 最晚2017.09.18 23:59:59前"
        android:textColor="@color/ytm_858585"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_34"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_34"
        />
    <TextView
        android:id="@+id/tv_info_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通知支付尾款的手机号: 13888888888"
        android:textColor="@color/ytm_858585"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_34"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_34"
        />

</LinearLayout>