<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buildorder_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:maxLines="2"
        android:text="teesdfsfssfsfsfd"
        android:textColor="#ff272727"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/buildorder_sku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_34"
        android:paddingRight="@dimen/dp_34"
        android:text="teesdfsfssfsfsfd"
        android:textColor="@color/ytm_buildorder_sku"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/presaleaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/ytm_buildorder_slash" />

        <TextView
            android:id="@+id/presaleaddresslabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="left"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="@dimen/dp_10"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp_34"
            android:paddingRight="@dimen/dp_34"
            android:text="sdfsfsdf
        sdfsf
        sdfssf"
            android:textColor="@color/ytm_buildorder_sku"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/ytm_buildorder_slash" />

    <LinearLayout
        android:id="@+id/buildorder_info_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_14"
        android:paddingTop="@dimen/dp_14"
        android:scrollingCache="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ytm_buildorder_slash" />

    <TextView
        android:id="@+id/sumMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:text="sdfsfs"
        android:textColor="#ff272727"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/sumMsg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_13"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:text="sdfsfs"
        android:textColor="#ffff6600"
        android:textSize="@dimen/sp_18"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/layout_buildorder_rebate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_34"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_buildorder_rebate_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:maxHeight="@dimen/dp_24"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_buildorder_rebate" />


        <TextView
            android:id="@+id/tv_buildorder_rebate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="@dimen/dp_3"
            android:text="预估 ¥ 1.99"
            android:includeFontPadding="false"
            android:textColor="@color/ytm_buildorder_total"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_presale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@drawable/hejifengexian" />

</LinearLayout>