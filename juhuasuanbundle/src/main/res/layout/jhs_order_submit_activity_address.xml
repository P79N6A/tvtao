<?xml version="1.0" encoding="utf-8"?>
<com.yunos.tvtaobao.juhuasuan.view.AddressView xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="wrap_content"
  	android:layout_height="match_parent"
  	android:addStatesFromChildren="true"
  	android:background="@drawable/jhs_sku_choose_n"
  	android:layout_marginLeft="@dimen/dp_f1">
  	

   <LinearLayout 
       android:layout_width="@dimen/dp_251" android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="@dimen/dp_20" android:layout_marginLeft="@dimen/dp_f1" >
       
       <LinearLayout 
	       android:layout_width="wrap_content" android:layout_height="wrap_content"
	       android:orientation="horizontal" >
	       
		    <TextView
		        android:id="@+id/address_username"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:textSize="@dimen/sp_24" android:textColor="@color/jhs_address_username"
		        android:includeFontPadding="false"
		        android:singleLine="true" />
		    
		    <TextView
		        android:id="@+id/address_mobile"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:textSize="@dimen/jhs_address_font_size" android:textColor="@color/jhs_address_area"
		        android:singleLine="true" android:maxLines="1" />
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/address_detail"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:textSize="@dimen/sp_24" android:textColor="@color/jhs_address_detail"
	        android:lines="2" android:maxLines="2"
	        android:includeFontPadding="false"
	        android:layout_marginTop="@dimen/dp_6" />
	    
	    
	   	<LinearLayout
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="@dimen/dp_14" >
		    
	        <TextView
	            android:id="@+id/address_province"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:textSize="@dimen/jhs_address_font_size" android:textColor="@color/jhs_address_area"
	            android:includeFontPadding="false" />
	        
	        <TextView
	            android:id="@+id/address_city"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:textSize="@dimen/jhs_address_font_size" android:textColor="@color/jhs_address_area"
	            android:includeFontPadding="false" />
	        
	        <TextView
	            android:id="@+id/address_area"
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:textSize="@dimen/jhs_address_font_size" android:textColor="@color/jhs_address_area"
	            android:includeFontPadding="false" />      
	
	    </LinearLayout>

   </LinearLayout>

</com.yunos.tvtaobao.juhuasuan.view.AddressView>

