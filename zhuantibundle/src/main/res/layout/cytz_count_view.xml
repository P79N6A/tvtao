<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_208"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/dp_272"
        android:background="@drawable/cytz_point_count"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_90"
        >
        <TextView
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_48"
            android:text="还有"
            android:textSize="@dimen/sp_14"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/cytz_count_text"
            />
        <TextView
            android:id="@+id/tv_count_bottom"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_48"
            android:text="分钟"
            android:textSize="@dimen/sp_14"
            android:gravity="top|center_horizontal"
            android:textColor="@color/cytz_count_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_85"
            />
        <TextView
            android:id="@+id/tv_count_time"
            android:layout_width="@dimen/dp_112"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_48"
            android:text="60"
            android:textSize="@dimen/sp_48"
            android:gravity="center"
            android:textColor="@color/cytz_count_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_98"
            />
    </RelativeLayout>
</RelativeLayout>