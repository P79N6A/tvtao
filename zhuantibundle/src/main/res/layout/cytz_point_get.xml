<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/rl_point_get"
    android:visibility="visible"
    android:layout_height="wrap_content">
 <RelativeLayout
    android:layout_width="@dimen/dp_208"
    android:layout_height="@dimen/dp_270"
    android:background="@drawable/cytz_point_get"
     android:layout_alignParentRight="true"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="@dimen/dp_80"
    >
     <com.yunos.tvtaobao.zhuanti.view.ArcProgress
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/dp_47"
         app:radius="@dimen/dp_58"
         app:arcCapRound="true"
         app:degree="99"
         app:progressStyle="arc"
         app:progressColor="@color/cytz_arcProgress"
         android:id="@+id/arcProgress"
         app:tickDensity="3"
         android:layout_marginTop="@dimen/dp_86"
         android:max="103"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cytz_point_get_botton"
        />
</RelativeLayout>
</RelativeLayout>