<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.yunos.tv.tvsdk.media.view.VideoView
        android:focusable="false"
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:background="#19000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/loading_relativelayout"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <com.yunos.tvtaobao.biz.widget.TvTaoBaoProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:id="@+id/tv_error"
            android:text="出错啦"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/tvbuy_bottom_progress"
        android:progressDrawable="@drawable/bottom_progress_bg"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4" />
    <ImageView
        android:layout_marginTop="@dimen/dp_288"
        android:layout_marginLeft="@dimen/dp_568"
        android:visibility="invisible"
        android:id="@+id/iv_stopEnterToPlay"
        android:src="@drawable/home_play"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_144"
        android:layout_height="@dimen/dp_144" />

    <com.yunos.tvtaobao.zhuanti.view.NewMyProgressbarRelativeLayout
        android:visibility="invisible"
        android:focusable="true"
        android:id="@+id/myProgressbarRelativelayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_476"/>



    <ImageView
        android:id="@+id/iv_error"
        android:visibility="invisible"
        android:background="@drawable/video_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>
