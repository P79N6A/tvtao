<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:background="@drawable/bottom_gradian_bg"
        android:layout_height="@dimen/dp_476">


    <RelativeLayout
        android:id="@+id/rl_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_232"
        >
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_weitao"
            android:layout_width="@dimen/dp_232"
            android:layout_height="@dimen/dp_232"
            android:layout_marginLeft="@dimen/dp_96"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@drawable/bg_item"
            >
            <LinearLayout
                android:layout_width="@dimen/dp_176"
                android:layout_height="@dimen/dp_176"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_28"
                android:orientation="vertical"
                android:background="@color/text_color_white"
                >
          <ImageView
              android:id="@+id/iv_weitao_pic"
              android:layout_width="@dimen/dp_80"
              android:layout_height="@dimen/dp_80"
              android:layout_marginLeft="@dimen/dp_48"
              android:layout_marginTop="@dimen/dp_16"
              />
            <TextView
                android:id="@+id/tv_weitao_name"
                android:layout_width="@dimen/dp_152"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:textSize="@dimen/sp_22"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/cytz_text_color"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weitao_shield"
            android:layout_width="@dimen/dp_232"
            android:layout_height="@dimen/dp_232"
            android:layout_marginLeft="@dimen/dp_96"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@drawable/bg_item"
            android:visibility="invisible"
            >
            <RelativeLayout
                android:layout_width="@dimen/dp_176"
                android:layout_height="@dimen/dp_176"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_28"
                android:background="@drawable/bg_weitao_shield"
                >
                <LinearLayout
                    android:id="@+id/ll_weitao_shield_check"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_alignParentBottom="true"
                    android:background="@color/cytz_blue_90"
                    android:orientation="horizontal"
                    >
                <CheckBox
                    android:id="@+id/cb_wt_check"
                    android:layout_width="@dimen/dp_20"
                    android:focusable="true"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/wt_unfocus_check"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:button="@null"
                    />
                    <TextView
                        android:id="@+id/tv_weitao_tip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:text="显示微淘动态"
                        android:gravity="center|left"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/text_color_white"

                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weitao_remove"
            android:layout_width="@dimen/dp_176"
            android:layout_height="@dimen/dp_176"
            android:layout_marginLeft="@dimen/dp_124"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_alignParentLeft="true"
            android:background="@color/color_black_70"
            android:gravity="center"
            android:visibility="invisible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已取消关注"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_20"
                />


        </LinearLayout>

         <LinearLayout
             android:visibility="invisible"
              android:id="@+id/ll_lastVideo"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="@dimen/dp_448"
              android:layout_width="@dimen/dp_232"
              android:layout_height="@dimen/dp_232"
              android:background="@drawable/bg_item"
             >
             <LinearLayout
                 android:layout_marginLeft="@dimen/dp_28"
                 android:layout_width="@dimen/dp_176"
                 android:layout_height="@dimen/dp_176"
                 android:layout_marginTop="@dimen/dp_28"
                 android:orientation="vertical"
                 android:background="@color/text_color_white"
                 >
             <ImageView
                 android:scaleType="fitXY"
                 android:id="@+id/iv_good_last"
                 android:layout_width="@dimen/dp_176"
                 android:layout_height="@dimen/dp_100" />
              <TextView
                  android:gravity="left|center_vertical"
                  android:textColor="@color/cytz_text_color"
                  android:textSize="@dimen/sp_21"
                  android:id="@+id/tv_good_name_last"
                  android:layout_gravity="center"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:layout_width="@dimen/dp_152"
                  android:layout_height="@dimen/dp_52"
                  android:layout_marginTop="@dimen/dp_12"
                  />
             </LinearLayout>

          </LinearLayout>
            <LinearLayout
                android:visibility="invisible"
               android:layout_marginRight="@dimen/dp_448"
               android:id="@+id/ll_nextVideo"
                android:layout_alignParentRight="true"
               android:layout_width="@dimen/dp_232"
               android:layout_height="@dimen/dp_232"
                android:background="@drawable/bg_item"
                >
                <LinearLayout
                    android:layout_width="@dimen/dp_176"
                    android:layout_height="@dimen/dp_176"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:orientation="vertical"
                    android:background="@color/text_color_white"

                    >
               <ImageView
                   android:scaleType="fitXY"
                   android:id="@+id/iv_good_next"
                   android:layout_width="@dimen/dp_176"
                   android:layout_height="@dimen/dp_100" />
               <TextView
                   android:textColor="@color/cytz_text_color"
                   android:textSize="@dimen/sp_21"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:id="@+id/tv_good_name_next"
                   android:layout_width="@dimen/dp_152"
                   android:layout_height="@dimen/dp_52"
                   android:layout_marginTop="@dimen/dp_12"
                   />
                </LinearLayout>
           </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/notify"
        android:background="@drawable/back_notify"
        android:layout_below="@id/rl_imageView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_width="@dimen/dp_208"
        android:layout_height="@dimen/dp_60" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_height="@dimen/dp_104">
        <RelativeLayout
            android:layout_width="@dimen/dp_104"
            android:layout_marginLeft="@dimen/dp_160"
            android:layout_alignParentLeft="true"
            android:layout_height="@dimen/dp_104">
            <ImageView
                android:id="@+id/iv_weitao_guanzhu"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_width="@dimen/dp_40"
                android:focusable="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@drawable/iv_wt_not_gz"
                android:layout_height="@dimen/dp_36" />
            <ImageView
                android:id="@+id/iv_weitao_guanzhu_focus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:background="@drawable/iv_wt_not_gz_focus"
                />


        </RelativeLayout>
  </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_next_last_btn_layout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_height="@dimen/dp_104">

            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_512"
                android:layout_width="@dimen/dp_104"
                android:layout_height="@dimen/dp_104">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/last_video_iv"
                    android:background="@drawable/last_video_focus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginTop="@dimen/dp_22"
                    android:focusable="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:src="@drawable/last_play"
                    android:id="@+id/ib_last"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_36"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="@dimen/dp_104"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_height="@dimen/dp_104">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/next_video_iv"
                    android:background="@drawable/next_video_focus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_22"
                    android:focusable="true"
                    android:src="@drawable/next_play"
                    android:id="@+id/ib_next"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_36" />
            </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progressbar_layout"
        android:layout_marginTop="@dimen/dp_300"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175">
        <RelativeLayout
            android:id="@+id/dddd"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_58"
            android:layout_height="@dimen/dp_38">
            <ProgressBar
                android:layout_marginLeft="@dimen/dp_160"
                android:layout_marginRight="@dimen/dp_160"
                android:focusable="false"
                android:progress="0"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/progressbar_bg"
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_80"
            android:background="@drawable/control_bg"
            android:id="@+id/control_relative"
            android:layout_width="@dimen/dp_160"
            android:layout_alignParentTop="true"
            android:layout_height="@dimen/dp_48">
            <ImageButton
                android:background="@drawable/kuaitui_selector"
                android:id="@+id/ib_left"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent" />
            <ImageButton
                android:focusable="true"
                android:background="@drawable/stop_play_selector"
                android:layout_toRightOf="@id/ib_left"
                android:id="@+id/ib_center"
                android:layout_width="@dimen/dp_64"
                android:layout_height="match_parent" />
            <ImageButton
                android:background="@drawable/kuaijin_selector"
                android:layout_toRightOf="@id/ib_center"
                android:id="@+id/ib_right"
                android:layout_width="@dimen/dp_48"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/reached_time"
            android:gravity="right|center_vertical"
            android:text="00:00"
            android:textSize="@dimen/sp_22"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_58"
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_38"
           />
        <TextView
            android:textSize="@dimen/sp_22"
            android:textColor="#ffffff"
            android:id="@+id/total_time"
            android:layout_alignParentRight="true"
            android:gravity="left|center_vertical"
            android:text="00:00"
            android:layout_marginTop="@dimen/dp_58"
            android:layout_width="@dimen/dp_144"
            android:layout_height="@dimen/dp_38"
            />

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/rl_contain_iv_on_progress"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_110"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96">
            <ImageView
                android:src="@drawable/progress_iv_onfocus"
                android:id="@+id/iv_on_progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>